{
    "src_folders": ["./tests/AcceptanceTest"],
    "output_folder": "./output/reports",
    "custom_commands_path": [
        "./utils/custom-commands",
        "./utils/custom-functions"
    ],
    "page_objects_path": "./pages",
    "custom_assertions_path": "./utils/custom-assertions",
    "globals_path": "./environment.js",
    "live_output": true,
    "parallel_process_delay": 10,
    "disable_colors": false,
    "test_workers": false,

    "selenium":
       {
           "start_process": true,
           "server_path": "./utils/drivers/selenium-server-standalone-3.4.0.jar",
           "log_path": "",
           "host": "127.0.0.1",
           "port": 4444,
           "cli_args":
           {
               "webdriver.chrome.driver": "/home/semaphore/Painttest/node_modules/chromedriver/lib/chromedriver/chromedriver",
               "webdriver.ie.driver": "",
               "webdriver.gecko.driver": "./utils/drivers/geckodriver.exe"
           }
       },
       "test_settings":
       {
           "default":
           {
               "launch_url": "http://localhost",
               "selenium_host": "localhost",
               "selenium_port": 4444,
               "silent": true,
               "persist_globals": true,
               "skip_testcases_on_fail": false,
               "end_session_on_fail": false,
               "disable_colors": false,
               "screenshots":
               {
                   "enabled": false,
                   "path": ""
               },
               "test_runner":
               {
                   "type": "mocha",
                   "options":
                   {
                       "ui": "bdd",
                       "reporter": "mochawesome",
                       "grep":"",
                       "reporterOptions": {
                           "reportTitle": "Leonardo Paint reports",
                            "overwrite": false
                          
                       }
                   }
               },
               "desiredCapabilities":
               {
                   "browserName": "chrome",
                 
               
                "globals": {
                   "waitForConditionTimeout": 5000,
                   "retryAssertionTimeout": 5000
                }
           },
           "chrome":
           {
           "browserName": "chrome",
	                      "acceptSslCerts": true,
                   "javascriptEnabled": true
               
           }
       }
     }
}